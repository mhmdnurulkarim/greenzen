{
  "hosting": {
    "public": "/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/home.html"
      },      
      {
        "source": "/about",
        "destination": "/about.html"
      },
      {
        "source": "/contact",
        "destination": "/contact.html"
      },
      {
        "source": "/news",
        "destination": "/news.html"
      },
      {
        "source": "/product",
        "destination": "/product.html"
      }, 
      {
        "source": "/error",
        "destination": "/error.html"
      }
    ], 
    "redirects": [
      {
        "source": "/home",
        "destination": "/",
        "type": "301"
      },
      {
        "source": "/",
        "destination": "/error",
        "type": "301"
      },
      {
        "source": "/about",
        "destination": "/error",
        "type": "301"
      },
      {
        "source": "/contact",
        "destination": "/error",
        "type": "301"
      },
      {
        "source": "/news",
        "destination": "/error",
        "type": "301"
      },
      {
        "source": "/product",
        "destination": "/error",
        "type": "301"
      }
    ]
  }
}
